<h1>Вопрос теста <%= @question.test.title %></h1>

<p>
  <strong>Вопрос:</strong>
  <%= @question.body %>
</p>

<h2>Ответы</h2>

<%= link_to 'Создать новый ответ', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Назад', test_path(@question.test) %> |
<%= link_to 'Изменить', edit_question_path(@question) %> |
<%= link_to 'Удалить',
            question_path(@question),
            method: :delete,
            data: { confirm: 'Вы уверены?' }
%>